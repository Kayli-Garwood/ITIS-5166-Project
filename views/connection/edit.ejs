<%- include('../partial/header.ejs')%>
<div class = "edit">
    <form method = "POST" action = "/connections/<%= connection.id%>?_method=PUT">
            <table>
                <tr>
                    <td><label for="topic" >Topic</label></td>
                    <td><input type="text" id="topic" name="topic" value ="<%= connection.topic%>" class = "fixed-width"></td>
                </tr>
                <tr>
                  <td><label for="title" >Title</label></td>
                  <td><input type="text" id="title" name="title" value ="<%= connection.title%>" class = "fixed-width"></td>
              </tr>
                <tr>
                <td><label for="hostName">Host Name</label></td>
                <td><input type="text" id="hostName" name="hostName" value ="<%= connection.hostName%>" class = "fixed-width"></td>
              </tr>
                <tr><td class = "align-top"><label for="details">Details</label></td>
                    <td><textarea rows="5" id="details" name="details" class = "fixed-width"><%=connection.details%></textarea></td>
                </tr>
                <tr>
                  <td><label for="address" >Address</label></td>
                  <td><input type="text" id="address" name="address" value = "<%= connection.address%>" class = "fixed-width"></td>
                </tr>
                <tr>
                  <td><label for="date" >Date</label></td>
                  <td><input type="date" id="date" name="date" value = "<%= connection.date%>" class = "fixed-width"></td>
                </tr>
                <tr>
                  <td><label for="startTime" >Start Time</label></td>
                  <td><input type="time" id="startTime" name="startTime" value = "<%= connection.startTime%>" class = "fixed-width"></td>
                </tr>
                <tr>
                  <td><label for="endTime" >End Time</label></td>
                  <td><input type="time" id="endTime" name="endTime" value = "<%= connection.endTime%>" class = "fixed-width"></td>
                </tr>
                <tr>
                  <td><label for="image" >Image URL</label></td>
                  <td><input type="url" id="image" name="image" value = "<%= connection.image%>" class = "fixed-width"></td>
                </tr>
                <tr>
                    <td colspan="2" class = "align-right"><button>Submit</button></td>
                </tr>
                </table>        
        </form>
        </div>
    <%- include('../partial/footer.ejs')%>
